{
    "compilerOptions": {
        "outDir": "./dist",
        "pretty": true,
        "target": "es2017",
        "lib": [
            "es2017"
        ],
        "module": "commonjs",
        "skipLibCheck": true,
        "sourceMap": true,
        "declaration": true,
        "importHelpers": true,
        "strict": true,
        "noImplicitAny": false // Needed to compile tap
    },
    "include": [
        "./lib/**/*"
    ]
}
